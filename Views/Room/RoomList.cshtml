@model IEnumerable<Phong>
@{
    ViewData["Title"] = "Room List";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link rel="stylesheet" href="path/to/font-awesome/css/all.min.css" />

<div class="text-center">
    <h2 class="display-4">DANH SÁCH PHÒNG</h2>
</div>

<div style="display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center;">
        <!-- Search bar -->
        <input type="text" placeholder="Tìm tên phòng..." class="form-control">
        <!-- Button with icon -->
        <button class="btn btn-info" type="button">
            <i class="fas fa-search"></i>
        </button>
    </div>
    <!-- Link for creating a new room -->
    <a asp-action="Create" class="btn btn-primary mb-3">Tạo phòng mới</a>
</div>

<table class="table table-striped table-bordered text-center">
    <thead class="thead-dark">
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>Loại</th>
            <th>Đơn giá</th>
            <th>Tình trạng</th>
            <th>Ghi chú</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Map</td>
                <td>@room.Tenphong</td>
                <td>@room.Loai</td>
                <td>@room.Dongia VND</td>
                <td>@(room.Tinhtrang ? "Trống" : "Bận")</td>
                <td>@room.Ghichu</td>
                <td>
                    <a asp-action="Update" asp-route-roomid="@room.Map" class="btn btn-info btn-sm">Cập nhật</a>
                    <form asp-action="Delete" asp-route-roomid="@room.Map" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
